@model Model.EF.Apointment

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{

    var session = (ShopOnline.Common.UserLogin)Session[ShopOnline.Common.ConstantsCommon.USER_SESSION];

}


<!--Carousel: băng chuyền (chuyển qua lại các hình dạng slide)-->
<div id="" slides class="carousel slide" data-ride="carousel">
    <ul class=" carousel-indicators">
        <li data-target="slides" data-slide-to="0" class="active"></li>
        <li data-target="slides" data-slide-to="1"></li>
        <li data-target="slides" data-slide-to="2"></li>
        <li data-target="slides" data-slide-to="3"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Assets/Client/images/carousel3.jpg">
            <div class="carousel-caption">
                <h1 class="display-2">Sức Khoẻ Thú Cưng</h1>
                <h3>Bởi vì thú cưng không thể nói chúng có vấn đề gì</h3>

            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Assets/Client/images/carousel1.jpg">
        </div>
        <div class="carousel-item">
            <img src="~/Assets/Client/images/carousel2.jpg">
        </div>
        <div class="carousel-item">
            <img src="~/Assets/Client/images/carousel0.jpg">
        </div>
    </div>
</div>
<!--jumpbotron-->
<div class="container-fluid">
    <div class="jumbotron">
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-10">
            <p>Chăm sóc & Quan tâm sức khoẻ thú cưng</p>
        </div>
    </div>
</div>
<hr>

<!--services--->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">
            <h1 class="display-6">Dịch Vụ & Điều Trị</h1>
        </div>
    </div>
</div>
<div class="card-schedule d-flex justify-content-center" style=" width: 100%; gap: 20px; padding-left: 30px; box-sizing: border-box;">
    @foreach (var item in Model.list)
    {
        <div class="schedule-card" style="height: fit-content; border-radius: 10px;">

            <div class="container" style="width: 200px; height: 200px; display: flex; flex-direction: column; align-items: center; padding: 30px 0px; box-sizing:border-box">
                <img class="Image_icon" src="~/Assets/Client/images/@item.Image" alt="@item.Name" style="width: 40%" />
                <h4>

                    @item.Name
                </h4>
                @if (session == null)
                {
                    <a href="@Url.Action("Login","User")">
                        <p>
                            Read more...
                        </p>
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Index","Appointment",new {id = item.id})">
                        <p>
                            Read more...
                        </p>
                    </a>
                }
            </div>
        </div>
    }
</div>

<div class="clear">

</div>
<hr>
<!--end services-->
<!-- .page-section -->

<div id="page-section" class="page-section">
    <div class="container">
        <h2 style="font-weight:bold" class=" text-center wow fadeInUp">Đặt Lịch Khám</h2>
        @if (session != null)
        {
            using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "main-form" }))
            {
                @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@
                <div class="row mt-5 ">
                    <div class="col-12 col-sm-6 py-2 wow fadeInLeft">
                        @*<input type="text" class="form-control" placeholder="Full name">*@
                        @Html.TextBoxFor(model => model.Name, new { Value = @session.UserName.ToString() ?? "0", @class = "form-control", @placeholder = "Họ và tên" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 col-sm-6 py-2 wow fadeInRight">
                        @*<input type="text" class="form-control" placeholder="Email address..">*@
                        @Html.TextBoxFor(model => model.Email, new { Value = @session.Email.ToString() ?? "0", @class = "form-control", @placeholder = "Địa chỉ Email", @type = "email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 col-sm-6 py-2 wow fadeInLeft" data-wow-delay="300ms">
                        @Html.TextBoxFor(model => model.BookingDate, new { @class = "form-control", @type = "date" })
                        @Html.ValidationMessageFor(model => model.BookingDate, "Please, check your clinic date(the date must be higher than the present day)", new { @class = "text-danger" })
                    </div>

                    <div class="col-12 col-sm-6 py-2 wow fadeInRight" data-wow-delay="300ms">

                        @Html.TextBoxFor(model => model.Phone, new { Value = @session.Phone.ToString() ?? "0", @class = "form-control", @type = "text", @placeholder = "Số điện thoại" })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="m-1 form-group row">
                        <div class="m-1 form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                            <label class="form-check-label" for="flexRadioDefault2">
                                Ca 1 |
                            </label>
                        </div>
                        <div class="m-1 form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                            <label class="form-check-label" for="flexRadioDefault2">
                                Ca 2 |
                            </label>
                        </div>
                    </div>
                    <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                        @*@Html.TextBoxFor(model => model.Phone, new { Value = @session.phone.ToString() ?? "0", @class = "form-control", @type = "text", @placeholder = "Phone number" })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })*@
                        @Html.DropDownList("ServicesId", new SelectList(Model.list, "Id", "Name"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ServicesId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @name = "message", @rows = 6, @placeholder = "Enter message..., desc" })
                    </div>
                </div>
                <button type="submit" class="mt-3 btn btn-primary col-md-12 wow zoomIn">Đồng ý</button>
            }
        }
        else
        {
            <br />
            <br />
            <div class="d-flex justify-content-center welcome">
                <h3>Bạn Có Muốn Đặt Lịch Không ?  </h3>
                <br />
                <a href="@Url.Action("Login","user")"><h2> Đăng Nhập</h2></a>
            </div>
        }


    </div>
</div> <!-- .page-section -->
<br />
<br />
<hr />

<div class="row"></div>
<div class="container-fluid padding">
    <div class="row padding">
        <div class="col-md-12 col-lg-6">
            <h2>Về Tầm Nhìn</h2>
            <p>Tất cả công việc của chúng tôi là vì sự hài lòng của khách hàng với các sản phẩm chất lượng cao</p>
            <p>Chúng tôi tin tưởng vào việc đối xử với mọi bệnh nhân như thể họ là thú cưng của chúng tôi và dành cho họ sự quan tâm và chăm sóc yêu thương như nhau. Chúng tôi là một nhóm gồm những người yêu động vật có kinh nghiệm, được đào tạo chuyên sâu, luôn tận tâm mang đến cho bệnh nhân sự chăm sóc tốt nhất có thể</p>
