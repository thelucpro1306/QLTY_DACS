@model Model.EF.Appointment

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{

    var session = (ShopOnline.Common.UserLogin)Session[ShopOnline.Common.ConstantsCommon.USER_SESSION];

}


<!--Carousel: băng chuyền (chuyển qua lại các hình dạng slide)-->
<div style="width:60%;margin-left:350px " id=""slides  class=" d-flex justify-content-center carousel slide " data-ride="carousel">
    <ul class=" carousel-indicators">
        <li data-target="slides" data-slide-to="0" class="active"></li>
        <li data-target="slides" data-slide-to="1"></li>
        <li data-target="slides" data-slide-to="2"></li>
        <li data-target="slides" data-slide-to="3"></li>
    </ul>
    <div style="width:100%" class="carousel-inner" >
        <div class="carousel-item active">
            <img src="~/Assets/Client/images/carousel3.jpg">
            <div style="font-family: 'Dosis', sans-serif;" class="carousel-caption">
                <h1 class="display-2">Sức Khoẻ Thú Cưng</h1>
                <h3>Bởi vì thú cưng không thể nói chúng có vấn đề gì</h3>

            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Assets/Client/images/carousel1.jpg">
        </div>
        <div class="carousel-item">
            <img src="~/Assets/Client/images/carousel2.jpg">
        </div>
        <div class="carousel-item">
            <img src="~/Assets/Client/images/couseling_1.PNG">
        </div>
    </div>
</div>
<!--jumpbotron-->
<div class="container-fluid">
    <div class="jumbotron">
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-10">
            <p>Chăm sóc & Quan tâm sức khoẻ thú cưng</p>
        </div>
    </div>
</div>
<hr>

<!--services--->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">
            <h1 class="display-6">Dịch Vụ & Điều Trị</h1>
        </div>
    </div>
</div>
<div   class="card-schedule d-flex justify-content-center" style=" width: 100%; gap: 20px; padding-left: 30px; box-sizing: border-box;">
    @foreach (var item in Model.list)
    {
    <div class="schedule-card" style="height: fit-content; border-radius: 10px;">

        <div class="container" style="width: 200px; height: 260px; display: flex; flex-direction: column; align-items: center; padding: 30px 0px; box-sizing:border-box">
            <img class="Image_icon" src="~/Assets/Client/images/@item.Image" alt="@item.Name" style="width: 40%" />
            <h4 class="mt-2" style="font-weight:bold ; font-family: 'Dosis', sans-serif" >

                @item.Name
            </h4>
            @if (session == null)
            {
                <a href="@Url.Action("Service_"+item.id,"Service")">
                    <p>
                        Xem thêm...
                    </p>
                </a>
            }
            else
            {
                <a href="@Url.Action("Service_"+item.id,"Service")">
                    <p>
                        Xem thêm...
                    </p>
                </a>
                <a href="@Url.Action("Index","Appointment",new {id = item.id})">
                    <p>
                        Đặt lịch ngay
                    </p>
                </a>

            }
        </div>
    </div>
    }
</div>

<div class="clear">

</div>

<!--end services-->
<!-- .page-section -->

<div id="page-section" class="page-section">
    <div class="container">


        @if (session == null)
        {
            <hr />
            <br />
            <br />
            <div class="d-flex justify-content-center welcome">
                <h3>Bạn Có Muốn Đặt Lịch Không ?  </h3>
                <br />
                <a href="@Url.Action("Login","user")"><h2> Đăng Nhập</h2></a>
            </div>
        }
        else
        {
            <hr />
            <div class=" welcome">
                <h2>Xin chào <strong style="color:blue">@session.Name</strong></h2>

                <h3>
                    Bạn đã đăng nhập thành công, ấn vào <strong> <a href="@Url.Action("Index","Appointment")">đây</a></strong> để đặt
                    lịch khám cho thú cưng của bạn
                </h3>
                <br />

            </div>
        }




    </div>
</div> <!-- .page-section -->
<br />
<br />
<hr />

<div class="row"></div>
<div class="container-fluid padding">
    <div class="row padding">
        <div class="col-md-12 col-lg-6">
            <h2>Về Tầm Nhìn</h2>
            <p>Tất cả công việc của chúng tôi là vì sự hài lòng của khách hàng với các sản phẩm chất lượng cao</p>
            <p>Chúng tôi tin tưởng vào việc đối xử với mọi bệnh nhân như thể họ là thú cưng của chúng tôi và dành cho họ sự quan tâm và chăm sóc yêu thương như nhau. Chúng tôi là một nhóm gồm những người yêu động vật có kinh nghiệm, được đào tạo chuyên sâu, luôn tận tâm mang đến cho bệnh nhân sự chăm sóc tốt nhất có thể</p>
        </div>
        <div class="col-lg-6">
            <img src="~/Assets/Client/images/vision.jpg" class="img-fluid">
        </div>
    </div>
    <hr class="my-4">
</div>



<div class="container-fluid padding">
    <div class="row text-center padding">
        <div class="col-12">
            <h2>Liên hệ với chúng tôi</h2>
        </div>
        <div class="col-12 social padding">
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-google-plus-g"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
        </div>
    </div>
</div>
<hr />
