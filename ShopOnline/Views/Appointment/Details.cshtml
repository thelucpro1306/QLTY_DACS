@model Model.EF.DeltailsMedicalForm

@{

    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h2 class="mt-3 d-flex justify-content-center">Chi tiết lịch khám</h2>
<br />
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-2">
            <div style="background-color: #f8f9fa;" class="  d-flex justify-content-lg-center flex-column">
                <h4><strong>Chi tiết lịch đặt</strong></h4>
                <hr />
                <dl style="display:flex; flex-direction: column;" class=" dl-horizontal ">
                    @{
                        var bookingtime = ShopOnline.Common.ShiftToTime.shiftToTime(Model.MedicalExaminationForm.Apointment.BookingTime);
                        var bookingDate = Model.MedicalExaminationForm.Apointment.BookingDate.ToString("MM/dd/yyyy");
                    }
                    <dt>
                        <i class="fa fa-user"></i> Họ và tên
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MedicalExaminationForm.Apointment.Name)
                    </dd>

                    <dt>
                        Dịch vụ đã chọn
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MedicalExaminationForm.Apointment.Servicess.Name)
                    </dd>


                    <dt>
                        Ngày đặt
                    </dt>

                    <dd>
                        @Html.Label(bookingDate)
                    </dd>

                    <dt>

                        Giờ đến khám
                    </dt>

                    <dd>
                        @Html.Label(bookingtime)
                    </dd>

                    <dt>
                        Ghi chú
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MedicalExaminationForm.Apointment.Note)
                    </dd>
                    <dt>
                        Số điện thoại
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MedicalExaminationForm.Apointment.Phone)
                    </dd>

                    <dt>
                        Địa chỉ Email
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MedicalExaminationForm.Apointment.Email)
                    </dd>


                </dl>
            </div>
        </div>
        <div style="background-color: #f8f9fa;" class="col-xl-8 border border-bottom-light"></div>
        <div style="background-color: #f8f9fa;" class="col-xl-2"></div>
    </div>
</div>

<p>
    @if (Model.MedicalExaminationForm.Apointment.BookingDate >= DateTime.Now)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.MedicalExaminationForm.id_Appointment })
    }

</p>
