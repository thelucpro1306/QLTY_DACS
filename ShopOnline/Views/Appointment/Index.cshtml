@model Model.EF.Apointment
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container">
    <div class="row">
        <div class="table d-flex justify-content-center table-hover" style="border:3px solid purple; width:100%" >
            <div class="row text-center">
                <table style="width:100%">
                    <tr>
                        <th>ID</th>
                        <th>Ca làm việc</th>
                        <th>Giờ làm việc</th>
                    </tr>
                    <tr>
                        <td>1</td>
                        <td>Ca 1</td>
                        <td>7h30 - 8h30</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Ca 2</td>
                        <td>9h30 - 10h30</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Ca 3</td>
                        <td>13h30 - 14h30</td>
                    </tr>
                    <tr>
                        <td>4</td>
                        <td>Ca 4</td>
                        <td>15h30 - 16h30</td>
                    </tr>

                </table>
            </div>
        </div>
    </div>
</div>
<hr />
<br />
<div class="container">
    <div id="page-section" class="page-section">
        <div class="container">
            <h1 class="text-center wow fadeInUp" style="font-size:40px">Đặt lịch khám</h1>
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "main-form" }))
            {
                @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@
                <div class="row mt-5 " >
                    <div class="col-12 col-sm-6 py-2 wow fadeInLeft">
                        @*<input type="text" class="form-control" placeholder="Full name">*@
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Full name" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 col-sm-6 py-2 wow fadeInRight">
                        @*<input type="text" class="form-control" placeholder="Email address..">*@
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email address", @type = "email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 col-sm-6 py-2 wow fadeInLeft" data-wow-delay="300ms">
                        @Html.TextBoxFor(model => model.BookingDate, new { @class = "form-control", @type = "date" })
                        @Html.ValidationMessageFor(model => model.BookingDate, "Please, check your clinic date(the date must be higher than the present day)", new { @class = "text-danger" })
                    </div>

                    <div class="col-12 col-sm-6 py-2 wow fadeInRight" data-wow-delay="300ms">
                        @Html.DropDownList("ServicesId", new SelectList(Model.list, "Id", "Name"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ServicesId, "", new { @class = "text-danger" })
                    </div>
                    <div class="m-1 form-group row">
                        <div class="m-1 form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                            <label class="form-check-label" for="flexRadioDefault2">
                                Ca 1 
                            </label>
                        </div>
                        <div class="m-1 form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                            <label class="form-check-label" for="flexRadioDefault2">
                                Ca 2 
                            </label>
                        </div>

                        <div class="m-1 form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                            <label class="form-check-label" for="flexRadioDefault2">
                                Ca 3 
                            </label>
                        </div>

                        <div class="m-1 form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                            <label class="form-check-label" for="flexRadioDefault2">
                                Ca 4 
                            </label>
                        </div>
                    </div>
                    <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @type = "text", @placeholder = "Phone number" })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @name = "message", @rows = 6, @placeholder = "Enter message..." })
                    </div>
                </div>
                <button type="submit" class="mt-3 btn btn-primary col-md-12 wow zoomIn">Submit Request</button>
            }
        </div>
    </div> <!-- .page-section -->
    <hr />
</div>
