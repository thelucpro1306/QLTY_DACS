        <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v14.0" nonce="l5foJo18"></script>
        <div class="fb-comments" data-href="http://127.0.0.1:5500/web3/indexdokhanhsf.html" data-width="" data-numposts="5"></div>
    </div>
    <br />
    <hr />
    @{ Html.RenderAction("Footer", "Home");}
</body>
