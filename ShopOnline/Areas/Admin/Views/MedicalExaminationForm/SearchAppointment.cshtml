@model Model.EF.Appointment

@{
    ViewBag.Title = "SearchAppointment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div  style="background-color:cornflowerblue;height:300px" class="row">

</div>
<div class="row">
    <div  class="container">
        <div class="row">
            <div class="col-6">
                <div class="card card-body">
                    <div class="row d-flex justify-content-md-center">
                        <p style="text-transform:uppercase;font-size:25px"><strong>Thêm mới một bệnh án</strong></p>
                    </div>
                    <div class="row d-flex justify-content-md-center">
                        <p>
                            Thêm mới một bệnh án cho những khách hàng đến khám chưa có đặt trước
                        </p>
                    </div>
                    <hr />
                    <div class="row  d-flex justify-content-md-center">
                        <a href="@Url.Action("Create","MedicalExaminationForm")" class="btn btn-primary">Thêm mới bệnh án</a>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-12">

                            <p style="text-transform:uppercase;font-size:25px"><strong>Tìm kiếm lịch đặt trước</strong></p>
                        </div>
                    </div>
                    <hr />
                    <div class="row d-flex justify-content-center">
                        <div class="col-8">
                            @using (Html.BeginForm("SearchAppointment", "MedicalExaminationForm", FormMethod.Get))
                            {
                                <div class="input-group">
                                    <input type="search" class="form-control rounded" name="searchString" value="@ViewBag.SearchString"
                                           placeholder="Tìm bởi tên khách hàng hoặc số điện thoại"
                                           aria-label="Search" aria-describedby="search-addon" />
                                    <button type="submit" class="btn btn-outline-primary">Tìm kiếm</button>
                                </div>
                            }
                        </div>
                    </div>
                    @if (Model.BookingDate.ToString("dd/MM/yyyy") == DateTime.Now.ToString("dd/MM/yyyy"))
                    {
                        <table class="table table-striped table-bordered table-hover">
                            <tr class="align-content-center">
                                <th>
                                    Tên dịch vụ đặt trước

                                </th>
                                <th>
                                    Ngày đặt
                                </th>
                                <th>
                                    Giờ đặt
                                </th>
                                <th>
                                    Tên người đặt
                                </th>
                                <th>
                                    Số điện thoại
                                </th>
                                <th>
                                    Email
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.Service.Name)
                                </td>

                                <td>
                                    @Html.Label(Model.BookingDate.ToString("MM/dd/yyyy"))

                                </td>
                                <td>
                                    @Html.Label(ShopOnline.Common.ShiftToTime.shiftToTime(Model.BookingTime))

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.Email)
                                </td>
                            </tr>
                        </table>
                    }

                </div>
            </div>
        </div>


    </div>
</div>
<div class="row"></div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
